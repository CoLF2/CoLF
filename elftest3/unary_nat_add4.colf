nat : cotype.
zero : nat.
succ : nat -> nat.

add : nat -> nat -> nat -> cotype.
%mode add + + -.
add/0 : add zero B B.
add/s : add A B C -> add (succ A) B (succ C).

two : nat = succ (succ zero).

add' : nat -> nat -> nat -> cotype.
%mode add' +A +B -C.
add'/def : add B A C -> add' A B C.

main : nat -> cotype.
%mode main -.
main/def : add' two two C -> main C.